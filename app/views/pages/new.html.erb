<h1>New Game</h1>

<div class='d-flex'>
<% @letters.each do |letter| %>
<div class="card bg-primary text-white p-1 m-1">
  <div class="card-body">
    <%=letter.capitalize%>
  </div>
</div>
<% end %>
</div>

<div class='form'>
<form action="/score" data-turbo="false" method='post'>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <div>
    <label>What is the longest word you can find?</label>
  </div>
  <div>
    <input type='text' name='word' >
    <input type='submit' value='Play'>
  </div>
</form>
</div>
